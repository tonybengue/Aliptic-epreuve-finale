{% extends 'base.html.twig' %}

{% block title %}CategoryEntity index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_entity in category_entities %}
            <tr>
                <td>{{ category_entity.id }}</td>
                <td>{{ category_entity.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category_entity.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
